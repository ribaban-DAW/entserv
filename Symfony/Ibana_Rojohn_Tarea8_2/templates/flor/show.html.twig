{% block title %}Flor{% endblock %}

{% block body %}
    <h1>Flor</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ flor.id }}</td>
            </tr>
            <tr>
                <th>Nombre</th>
                <td>{{ flor.Nombre }}</td>
            </tr>
            <tr>
                <th>Color</th>
                <td>{{ flor.Color }}</td>
            </tr>
            <tr>
                <th>Tamaño</th>
