{% extends 'base.html.twig' %}

{% block title %}Paciente{% endblock %}

{% block body %}
    <h1>Paciente</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ paciente.id }}</td>
            </tr>
            <tr>
                <th>Nombre</th>
                <td>{{ paciente.Nombre }}</td>
            </tr>
            <tr>
                <th>Apellidos</th>
                <td>{{ paciente.Apellidos }}</td>
            </tr>
            <tr>
                <th>Sexo</th>
                <td>{{ paciente.Sexo }}</td>
            </tr>
            <tr>
                <th>Edad</th>
                <td>{{ paciente.Edad }}</td>
            </tr>
            <tr>
                <th>Doctor</th>
                <td>{{ paciente.Doctor.Nombre }}</td>
            </tr>
        </tbody>
    </table>

    <a class="btn btn-secondary my-2" href="{{ path('app_paciente_index') }}">Volver</a>

    <a class="btn btn-primary my-2" href="{{ path('app_paciente_edit', {'id': paciente.id}) }}">Editar</a>

    {{ include('paciente/_delete_form.html.twig') }}
{% endblock %}
